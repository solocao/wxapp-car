//标签
.tag-box {
  position: relative;
}

.tag {
  position: absolute;
  top: -0.8em;
  right: 0;
  height: 1.6em;
  min-width: 1.6em;
  line-height: 1.6;
  padding: 0 .4em;
  font-size: 20px;
  border-radius: .8em;
  background: #f44;
  color: white;
  text-align: center;
  white-space: nowrap;
  transform: translateX(50%) scale(0.5);
  transform-origin: center;
  box-shadow: 0 0 0 2px #fff;
  box-sizing: border-box;
  z-index: 2;
}

.tab-no_bg {
  color: #009DDA;
  background: none;
  box-shadow: none;
}
