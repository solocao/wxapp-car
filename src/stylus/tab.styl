//tab导航
@import "common.styl"

/* tab colors */
$tab-box-border-color = $gray-light //盒子底部颜色
$tab-background-color = $white //盒子背景颜色
$tab-title-color = $text-color //tab标题颜色
$tab-selected-border-color = #1D9ED7 //选中底部颜色
$tab-selected-color = #1D9ED7 //选中字体颜色

.tab,
.tab-box,
.tab-item,
.tab-title,
.tab-title-selected,
.tab-item-selected {
}

.tab {
  height: 45px;
}

.tab-box {
  width: 100%;
  height: 45px;
  display: flex;
  white-space: nowrap;
  box-sizing: border-box;
  border-bottom: 1px solid $tab-box-border-color;
  background: white;

  .tab-item {
    flex 1;
    display: inline-block;
    min-width: 80px;
    padding: 0 10px;
    line-height: 0;
    box-sizing: border-box;
    text-align: center;

    .tab-title {
      display: inline-block;
      max-width: 100%;
      height: 44px;
      line-height: 44px;
      box-sizing: border-box;
      overflow: hidden;
      text-overflow: ellipsis;
      word-break: keep-all;
      font-size: 14px;
      color: $tab-title-color;
    }

    .tab-title-selected {
      color: $tab-selected-color;
      border-bottom: 2px solid $tab-selected-border-color;
    }

    .tab-title-selected-diyBlue {
      color: #25ABDF;
      border-bottom: 2px solid #25ABDF;
    }
  }

  .tab-item-selected {
    border-bottom: 2px solid $tab-selected-border-color;
    .tab-title {
      color: $tab-selected-color;
    }
  }

  .tab-item-selected-diyBlue {
    border-bottom: 2px solid #25ABDF;
    .tab-title {
      color: #25ABDF;
    }
  }
}

.tab-box-no_border {
  border: none;
}

.tab-fixed {
  position: fixed;
  top: 0;
  z-index: 1;
}
